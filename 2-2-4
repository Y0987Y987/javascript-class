//請算出某陣列的平均值？ 範例： mean([1,2,3,4,5]) => 3

var a = [1,2,3,4,5];
var b = 0;
	
for (i=0;i<a.length;i++){      //a[4]=5
		b += a[i];
}
	
console.log("mean([1,2,3,4,5])="+b/a.length);

