//5.請檢查某數是否為質數？ 範例： isPrime(17) => true

function isPrime (n) {
    for (i=2;i<=n;i++){
        if (n % i === 0 && n !== i){
            return false;
        }
        if (n % i === 0 && n === i){
            return true;
        }
    }
}


console.log("isPrime(17)=", isPrime(17));
