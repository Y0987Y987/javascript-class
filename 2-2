//3.請將 a 到 b 之間無法被 3, 5, 7 整除的數字放到陣列中？
//範例： filter357(5,10) = [8]
//範例： filter357(5,15) = [8,11,13]


var arr = [];

//無法被3、5、7整除的數字
function filter357 (n) {
	if (n % 3 ===0 || n % 5 === 0 || n % 7 === 0){
	return false;}
	return true;
}

//加到陣列裡
function add (x) {
	if (filter357(x)){
		arr.push(x);
	}
}

//a到b之間
function a2b (a,b) {
for (i=a;i<=b;i++){
	add (i);
}
return arr;
}

console.log(a2b(5,15));
-----------------------------------------------------------------------------------------------------------
