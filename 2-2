//5.請算出某陣列的標準差？ (標準差為 (xi-x)^2 的總和)
//範例： sd([1,2,3,4,5]) = sqrt((2^2+1^2+0^2+1^2+2^2)/5) = sqrt(2)=1.414。

var arr = [1,2,3,4,5];

//總和
var sum = 0;
for (i=0;i<arr.length;i++){
	sum += arr[i];
}

//平均數
var t = sum / arr.length;

//變異數
function s (){
	var e = 0;
	for (i=0;i<arr.length;i++){
		var c = arr[i];
		var d = c-t;
		d *= d;
		e += d;
	}
	return e/arr.length;
	
}


//變異數平方根
var k = Math.sqrt(s());
console.log(k);
--------------------------------------------------------------------------------------------------------------
//6.請寫一個數找出一個排序好陣列中差異最小的兩個數之距離？
//範例： minGap([1,3,6,7,10]) = 1

var arr = [1,3,6,7,10];
var a = 0;
var b = [];
for (i=0;i<arr.length-1;i++){
	a = arr[i+1]-arr[i];
	b.push(a);
}
//b=[2,3,1,3];

b.sort();

console.log(b[0]);

